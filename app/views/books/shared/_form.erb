<%= form_with(model: book, local: true) do |form| %>
  <div id="errors"></div>

  <p>
    <b>Title</b><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= render partial: "books/shared/select_author", locals: { authors: authors } %>
  </p>
  <p>
    <b>Image</b><br>
    <%= form.file_field :cover %>
  </p>
  <p>
    <b>Shelf</b><br>
    <%= form.select :shelf, book_shelves %>
  </p>
  <p>
    <%= form.submit 'Add book' %>
  </p>
<% end %>
